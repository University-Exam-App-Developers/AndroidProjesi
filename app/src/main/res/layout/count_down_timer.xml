<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/countDownProgress"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:progress="60"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/circle_1"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/countDown"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_above="@+id/countDownProgress"
            android:layout_alignParentStart="true"
            android:text="00:00:00"
            android:textAlignment="center"
            android:textSize="35dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/start_stop2"
            android:layout_width="167dp"
            android:layout_height="167dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button"
            android:text="BAÅžLAT"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countDownProgress"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addTime_2"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/add" />

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/getTime"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/time" />

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>