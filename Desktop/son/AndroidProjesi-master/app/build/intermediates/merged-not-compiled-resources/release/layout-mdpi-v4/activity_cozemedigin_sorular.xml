<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context="ykskoc.example.snavadogru.Camera.CozemediginSorular">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Header1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="35sp"
            android:text="Çözemediğin Sorular"
            android:textColor="@color/Black"
            android:textSize="35sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Header1"
            android:layout_alignParentStart="true"
            android:layout_margin="50sp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/firstSentence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="25sp"
                    android:textAlignment="center"
                    android:text="ÇÖZEMEDİĞİN SORULARI ÖĞRENMEDEN GEÇME!!"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/firstSentence"
                    android:layout_margin="25sp"
                    android:text="Yapamadığın soruların fotoğrafını çek ve yaprak test oluştur. \nTekrar tekrar ÇÖZ!! \n Unutma taşı delen suyun gücü değil sürekliliğidir."
                    android:textAlignment="center"
                    android:textColor="@color/darkslategray"
                    android:textSize="15sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50sp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <Button
            android:id="@+id/testOlustur"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:background="@drawable/questionnaire"
            android:layout_toStartOf="@+id/centerSpace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/testOlustur"
            android:layout_alignTop="@+id/testOlustur"
            android:layout_alignEnd="@+id/testOlustur"
            android:layout_marginTop="100sp"
            android:gravity="center"
            android:text="Yaprak Test"
            android:textColor="@color/Black"
            android:textSize="18sp" />

        <Space
            android:id="@+id/centerSpace"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/fotoCek"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_alignParentTop="true"
            android:background="@drawable/photo"
            android:layout_toEndOf="@+id/centerSpace" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fotoCek"
            android:layout_alignTop="@+id/fotoCek"
            android:layout_alignEnd="@+id/fotoCek"
            android:layout_marginTop="100sp"
            android:gravity="center"
            android:text="Sorunu Çek"
            android:textColor="@color/Black"
            android:textSize="18sp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>