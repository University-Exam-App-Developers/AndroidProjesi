<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="190sp"
        android:layout_centerInParent="true"

        android:background="@drawable/dialog_bc"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="72dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/hourUp"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/up_arrow2" />

            <Space
                android:layout_width="29dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/minUp"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/up_arrow2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="63dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/getHourView"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:text="00"
                android:fontFamily="@font/chococooky"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="45sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:text=":"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="45sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/getMinView"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:text="00"
                android:fontFamily="@font/chococooky"
                android:textAlignment="center"
                android:textSize="45sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="72dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/hourDown"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/down_arrow2" />

                <Space
                    android:layout_width="29dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/minDown"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/down_arrow2" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/iptal"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15sp"
                android:background="@drawable/button"
                android:text="Ä°PTAL" />

            <Button
                android:id="@+id/ekle"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15sp"
                android:background="@drawable/button"
                android:text="EKLE" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>