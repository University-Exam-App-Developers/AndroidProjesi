<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context="ykskoc.example.snavadogru.Camera.NewCamera">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_margin="15sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imv_camera_soru1"
                        android:layout_width="175sp"
                        android:layout_height="125sp"
                        android:padding="25sp"
                        android:src="@drawable/image_question"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_margin="10sp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imv_camera_select_photo1"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/gallery_bg"
                            />
                        <ImageView
                            android:id="@+id/imv_camera_take_photo1"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/camera_bg"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imv_camera_soru4"
                        android:layout_width="175sp"
                        android:layout_height="125sp"
                        android:padding="25sp"
                        android:src="@drawable/image_question"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_margin="10sp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imv_camera_select_photo4"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/gallery_bg"
                            />
                        <ImageView
                            android:id="@+id/imv_camera_take_photo4"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/camera_bg"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="15sp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imv_camera_soru2"
                        android:layout_width="175sp"
                        android:layout_height="125sp"
                        android:padding="26dp"
                        android:src="@drawable/image_question"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imv_camera_select_photo2"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/gallery_bg"
                            />
                        <ImageView
                            android:id="@+id/imv_camera_take_photo2"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/camera_bg"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imv_camera_soru5"
                        android:layout_width="175sp"
                        android:layout_height="125sp"
                        android:padding="26dp"
                        android:src="@drawable/image_question"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imv_camera_select_photo5"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/gallery_bg"
                            />
                        <ImageView
                            android:id="@+id/imv_camera_take_photo5"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/camera_bg"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="15sp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imv_camera_soru3"
                        android:layout_width="175sp"
                        android:layout_height="125sp"
                        android:padding="26dp"
                        android:src="@drawable/image_question"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imv_camera_select_photo3"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/gallery_bg" />
                        <ImageView
                            android:id="@+id/imv_camera_take_photo3"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/camera_bg"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imv_camera_soru6"
                        android:layout_width="175sp"
                        android:layout_height="125sp"
                        android:padding="26dp"
                        android:src="@drawable/image_question"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="6dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imv_camera_select_photo6"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/gallery_bg"
                            />
                        <ImageView
                            android:id="@+id/imv_camera_take_photo6"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/camera_bg"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_make_pdf_newcamera"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_margin="15sp"
        android:layout_above="@+id/camera_adView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_arkaplan"
        android:shadowColor="@color/black"
        android:text="Yaprak Test Oluştur"
        android:textSize="20sp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/camera_adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7739380766735309/1206416134"/>
</RelativeLayout>