<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/firstscreen_bc"
    tools:context=".FirstScreen.GirisActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/educationimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/edu" />

        <EditText
            android:id="@+id/edit_email_giris"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_margin="5sp"
            android:background="@drawable/edittext_arkaplan"
            android:drawableStart="@drawable/mail"
            android:fontFamily="@font/chococooky"
            android:hint="  Email Adres"
            android:inputType="textEmailAddress"
            android:padding="10sp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_sifre_giris"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_margin="5sp"
            android:background="@drawable/edittext_arkaplan"
            android:drawableStart="@drawable/password"
            android:fontFamily="@font/chococooky"
            android:hint="  Şifre"
            android:inputType="textPassword"
            android:padding="10sp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_giris_activity"
            android:layout_width="100sp"
            android:layout_height="35sp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:background="@drawable/button_arkaplan"
            android:text="Giriş"
            android:textColor="@color/whitesmoke"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_kaydolsayfasına_git"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:background="@drawable/edittext_arkaplan"
            android:gravity="center"
            android:padding="5dp"
            android:text="Varolan bir hesabınız yok mu? Kaydol!"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>