<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/firstscreen_bc"
    tools:context=".FirstScreen.GirisActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/educationimage"
            android:layout_width="match_parent"
            android:layout_height="750sp"
            android:background="@mipmap/edu"/>
        <EditText
            android:id="@+id/edit_email_giris"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_arkaplan"
            android:drawableStart="@drawable/mail"
            android:padding="15dp"
            android:fontFamily="@font/chococooky"
            android:hint="  Email Adres"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edit_sifre_giris"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_arkaplan"
            android:drawableStart="@drawable/password"
            android:fontFamily="@font/chococooky"
            android:padding="15dp"
            android:hint="  Şifre"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_giris_activity"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_arkaplan"
            android:text="Giriş"
            android:textColor="@color/whitesmoke"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_kaydolsayfasına_git"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:background="@drawable/edittext_arkaplan"
            android:gravity="center"
            android:padding="5dp"
            android:text="Varolan bir hesabınız yok mu? Kaydol!"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </LinearLayout>
</RelativeLayout>