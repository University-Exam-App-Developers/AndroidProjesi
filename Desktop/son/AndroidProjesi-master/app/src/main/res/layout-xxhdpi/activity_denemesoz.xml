<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A03232"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:columnCount="1"
            android:rowCount="8">

            <com.jjoe64.graphview.GraphView
                android:id="@+id/deneme_sozGraph"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="25dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="@drawable/graphviewsoz_background"
                android:layout_row="0"/>

            <com.jjoe64.graphview.GraphView
                android:id="@+id/deneme_edebiyatGraph"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="25dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="@drawable/graphviewsoz_background"
                android:layout_row="1"/>

            <com.jjoe64.graphview.GraphView
                android:id="@+id/deneme_tarih_1Graph"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="25dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="@drawable/graphviewsoz_background"
                android:layout_row="2"/>

            <com.jjoe64.graphview.GraphView
                android:id="@+id/deneme_cog1Graph"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/graphviewsoz_background"
                android:layout_row="3"/>

            <com.jjoe64.graphview.GraphView
                android:id="@+id/deneme_tarih_2Graph"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="25dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="@drawable/graphviewsoz_background"
                android:layout_row="4"/>

            <com.jjoe64.graphview.GraphView
                android:id="@+id/deneme_cog_2Graph"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="25dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="@drawable/graphviewsoz_background"
                android:layout_row="5"/>

            <com.jjoe64.graphview.GraphView
                android:id="@+id/deneme_felsefeGraph"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="25dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="@drawable/graphviewsoz_background"
                android:layout_row="6"/>

            <com.jjoe64.graphview.GraphView
                android:id="@+id/deneme_dinGraph"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="25dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="@drawable/graphviewsoz_background"
                android:layout_row="7"/>
        </GridLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatLibrary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/floatAdd"
            app:srcCompat="@drawable/books" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            app:backgroundTintMode="src_atop"
            app:srcCompat="@drawable/plus3" />

    </RelativeLayout>
</RelativeLayout>